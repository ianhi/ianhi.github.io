---
import BaseLayout from "../layouts/BaseLayout.astro";
import ToolCard from "../components/ToolCard.astro";
import tools from "../data/tools.json";
---

<BaseLayout title="Tools">
  <section>
    <h1 class="text-2xl font-semibold text-primary mb-2">Tools</h1>
    <p class="text-stone-600 dark:text-stone-400 mb-6">Useful tools I've made.</p>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
      {tools.list.map((tool) => (
        <ToolCard
          name={tool.name}
          tagline={tool.tagline}
          desc={tool.desc}
          url={tool.url}
          docs={tool.docs}
        />
      ))}
    </div>
  </section>
</BaseLayout>
