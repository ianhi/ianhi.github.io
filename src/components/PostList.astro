---
import type { CollectionEntry } from "astro:content";

interface Props {
  posts: CollectionEntry<"blog">[];
}

const { posts } = Astro.props;
---

{posts.length === 0 ? (
  <p class="text-stone-500 dark:text-stone-400 italic">No posts yet â€” check back soon!</p>
) : (
  <ul class="space-y-4">
    {posts.map((post) => (
      <li class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-4">
        <time
          datetime={post.data.date.toISOString()}
          class="text-sm text-stone-500 dark:text-stone-400 tabular-nums shrink-0"
        >
          {post.data.date.toISOString().slice(0, 10)}
        </time>
        <div>
          <a href={`/blog/${post.id}/`} class="font-medium no-underline">
            {post.data.title}
          </a>
          {post.data.description && (
            <p class="text-sm text-stone-500 dark:text-stone-400 mt-0.5">
              {post.data.description}
            </p>
          )}
        </div>
      </li>
    ))}
  </ul>
)}
