---
import { Sun, Moon } from "@lucide/astro";
---

<button
  class="theme-toggle p-1.5 rounded-md text-stone-600 dark:text-stone-400 hover:text-primary hover:bg-stone-200/50 dark:hover:bg-stone-700/50 transition-colors"
  aria-label="Toggle dark mode"
  onclick="document.documentElement.classList.toggle('dark'); localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light')"
>
  <Sun class="w-4 h-4 hidden dark:block" />
  <Moon class="w-4 h-4 block dark:hidden" />
</button>
