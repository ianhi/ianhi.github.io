---
import { Github, BookOpen, Star } from "@lucide/astro";

interface Props {
  name: string;
  desc: string;
  url: string;
  docs?: string;
  stars?: number;
}

const { name, desc, url, docs, stars } = Astro.props;
---

<div class="border border-stone-200 dark:border-stone-700 rounded-lg p-4 hover:shadow-md transition-shadow flex flex-col">
  <div class="flex items-center justify-between gap-2">
    <a href={docs || url} target="_blank" rel="noopener" class="font-mono font-semibold text-sm">
      {name}
    </a>
    {stars != null && stars > 0 && (
      <span class="inline-flex items-center gap-1 text-xs text-stone-400 dark:text-stone-500 shrink-0">
        <Star class="w-3 h-3" /> {stars}
      </span>
    )}
  </div>
  <p class="text-stone-700 dark:text-stone-300 text-sm leading-relaxed mt-1.5 flex-1">
    {desc}
  </p>
  <div class="flex gap-2 flex-wrap mt-3">
    <a
      href={url}
      target="_blank"
      rel="noopener"
      class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs border border-stone-300 dark:border-stone-600 rounded hover:bg-stone-100 dark:hover:bg-stone-700 no-underline text-stone-700 dark:text-stone-300 transition-colors"
    >
      <Github class="w-3.5 h-3.5" /> GitHub
    </a>
    {docs && (
      <a
        href={docs}
        target="_blank"
        rel="noopener"
        class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs border border-stone-300 dark:border-stone-600 rounded hover:bg-stone-100 dark:hover:bg-stone-700 no-underline text-stone-700 dark:text-stone-300 transition-colors"
      >
        <BookOpen class="w-3.5 h-3.5" /> Docs
      </a>
    )}
  </div>
</div>
